<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/transLila1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/transStatusIv"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:src="@drawable/approved" />

            <ImageView
                android:id="@+id/procOnlineIv"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/sivo"
                android:src="@drawable/printererr" />

            <ImageView
                android:id="@+id/transCardIv"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:src="@drawable/pay_card" />
        </LinearLayout>

        <TextView
            android:id="@+id/transTextTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/money"
            android:gravity="center"
            android:padding="5dp"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/transTimeTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/sivo"
            android:drawableLeft="@drawable/clock128"
            android:gravity="center|center_vertical"
            android:padding="5dp"
            android:text="transVrijediOdTxt"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/transVrijediDoTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/clock_rev128"
            android:gravity="center"
            android:padding="5dp"
            android:text="transVrijediDoTxt"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/transCodeTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/sivo"
            android:drawableLeft="@drawable/error128"
            android:gravity="center"
            android:padding="5dp"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/transDeviceTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/license_plate"
            android:gravity="center"
            android:padding="5dp"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

</ScrollView>